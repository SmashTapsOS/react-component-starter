{
  "name": "react-component-starter",
  "version": "1.0.0",
  "description": "A simple project starter for react component development",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "prettify": "prettier 'src/**/*.js' --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "build": "rollup -c",
    "prebuild": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samAbeywickrama/react-component-starter.git"
  },
  "keywords": [
    "react",
    "npm",
    "bootstrap",
    "starter",
    "create-react-library",
    "create-react-component"
  ],
  "author": "Sameera C Abeywickrama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samAbeywickrama/react-component-starter/issues"
  },
  "homepage": "https://github.com/samAbeywickrama/react-component-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "git-cz": "^3.2.1",
    "husky": "^3.0.2",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn prettify && yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "react": "^16.8.6"
  }
}
